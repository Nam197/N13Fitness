<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.luongoc.n3_13_fitness.trangChu.Main3CoBung.Main3Bicycle">

    <LinearLayout
        android:id="@+id/llAbs3"
        android:layout_alignParentTop="true"
        android:background="#6996f2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="58dp">
        <ImageView
            android:src="@drawable/icon_back"
            android:padding="12dp"
            android:id="@+id/imgBackCobung"
            android:layout_width="58dp"
            android:layout_height="58dp"
            />

        <TextView
            android:layout_width="250dp"
            android:layout_height="58dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"
            android:text="Bicycle"
            android:textColor="#ffff"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llDate"
        android:background="#6996f2"
        android:layout_below="@+id/llAbs3"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:gravity="center_horizontal"
            android:id="@+id/tvDate"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:text="DD:MM:YYYY"
            android:textSize="26dp"/>
    </LinearLayout>

